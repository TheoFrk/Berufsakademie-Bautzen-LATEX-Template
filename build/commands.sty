% Definition für Zitierstil mit Autor, Jahr und Seitenzahl
\newbibmacro{cite:authoryear+page}{%
  \printnames{labelname}%
  \setunit{\addcomma\space}%
  \printfield{year}%
  \iffieldundef{postnote}{}{%
    \setunit{\addcomma\space}%
    \printfield{postnote}%
  }%
}

