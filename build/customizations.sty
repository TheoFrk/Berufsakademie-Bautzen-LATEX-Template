\DeclareBibliographyDriver{legal}{%
	\printtext[labelname]{%
		\printfield{title}%
		\setunit{\addspace}%
		\printfield{year}%
		\setunit{\addspace}%
		\printfield{number}%
	}
}

\newbibmacro*{cite:law}{%
	\printnames{labelname}% Autor (Gesetz)
	\setunit*{\addspace}% Leerzeichen
	\printfield{postnote}% Paragraph
}

